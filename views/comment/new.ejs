<%- include("../partials/header") %>

<div class="container">
    <div class="d-flex flex-column align-items-center">
        <div class="w-50">
            <h1> Add New Comment to <%= campground.name %>  </h1>
            <form action="/campgrounds/<%= campground._id %>/comments"  method="POST">
                <div class="form-group">
                    <label for="comment"> Commenting As: <%= currentUser.username %> </label>
                    <textarea id="comment" class="form-control" name="comment[text]"></textarea>
                </div>
                <button type="submit" class="btn btn-primary"> Submit </button>
            </form>
            <a href="/campgrounds/<%= campground._id %>"> Go Back </a>  
        </div>  
    </div>
</div>


<%- include("../partials/footer") %>
<%- include("../partials/header") %>

<div class="container justify-content-center usercred">
    <h1 class="display-1 text-center"> Sign Up </h1>
    <form action="/register" method="POST">
        <div class="form-group">
            <input type="email" class="form-control" id="registerEmail" aria-describedby="emailHelp" name="email" placeholder="email">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" id="registerUsername" aria-describedby="username" name="username" placeholder="username">
        </div>
        <div class="form-group">
            <input type="password" class="form-control" id="registerPassword" name="password" placeholder="password"> 
        </div>
        <button type="submit" class="btn btn-primary w-100">Sign Up!</button>
    </form>
</div>

<%- include("../partials/footer") %>
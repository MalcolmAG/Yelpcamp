<%- include("../partials/header") %>

<div class="container">
    <div class="d-flex flex-column align-items-center">
        <div class="w-50">
            <h1> Create a New Campground </h1>
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input type="text" name="camp[name]" placeholder="name" class="form-control">
                </div>
                <div class="form-group">
                    <input type="text" name="camp[image]" placeholder="image url" class="form-control" >
                </div>
                <div class="form-group">
                    <input type="text" name="camp[description]" placeholder="description" class="form-control">
                </div>
                <div class="form-group">
                    <input type="text" name="camp[cost]" placeholder="cost" class="form-control" >
                </div>
                <button type="submit" class="btn btn-primary"> Submit </button>
            </form>
            <a href="/campgrounds"> Go Back </a>  
        </div>  
    </div>
</div>


<%- include("../partials/footer") %>
<%- include("../partials/header") %>

<div class="container">
    <div class="d-flex flex-column align-items-center">
        <div class="w-50">
            <h1> Editing <%= camp.name %>  </h1>
            <form action="/campgrounds/<%= camp._id %>?_method=PUT"  method="POST">
                <div class="form-group">
                    <input id="campname" type="text" name="camp[name]" placeholder="name" class="form-control" value="<%= camp.name %>">
                </div>
                <div class="form-group">
                    <input id="imgurl" type="text" name="camp[image]" placeholder="image url" class="form-control" value="<%= camp.image %>">
                </div>
                <div class="form-group">
                    <input id="description" type="text" name="camp[description]" placeholder="description" class="form-control" value="<%= camp.description %>">
                </div>
                <div class="form-group">
                    <input type="text" name="camp[cost]" placeholder="cost" class="form-control" value="<%= camp.cost %>">
                </div>
                <button type="submit" class="btn btn-primary"> Save </button>
            </form>
            <a href="/campgrounds/<%= camp._id %>"> Go Back </a>  
        </div>  
    </div>
</div>


<%- include("../partials/footer") %>